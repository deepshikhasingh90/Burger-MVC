<header>
    <img src="/assets/img/bur.jpg" alt="Burger-image">
</header>

<h1>SET. YOUR. BURGER.</h1>

<div class="row">
    <div class="column">
        <h2>Waiting to be devoured:</h2>
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="column">
        <h2>Devoured:</h2>
        <ul>
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>

<form class="create-form">
    <div class="form-group">
        <label for="bur">Add a Burger:</label>
        <input type="text" id="bur" name="name" maxlength="100">
        <button type="submit">Submit</button>
    </div>
</form>