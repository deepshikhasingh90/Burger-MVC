<div class="container">
    <!--Jumbotron-->
    <div class="jumbotron text-center bg-success text-white">
        <h1 class="display-4 text-center" id="app-title">EAT-DA-BURGERS <img src="/assets/img/images.png"></h1>
        <p class="lead">Welcome to EAT-DA-BURGERS. Home of the Awesome Burger.</p>
    </div>
    <br> 
    <div class = "row">
        <div class="col-sm-12 text-center">
            <h2 id="color-override">Make a Burger</h2>
        <panel>
            <form class="create-form">
                <div class="form-group">
                    <label for="newburger" id="color-override">New Burger:</label>
                    <input type="text" id="newburger" name="burger">
                   <button type="submit" class="btn btn-success" id="addburger">Create</button>
                </div>
            </form>
        </panel>
        </div>
    </div>
    <br>
    <br>
    <div class="row">
        <div class="col-sm-7">
            <div class="panel panel-default">
                <div class="panel-heading" id="lefthead"><strong>Available Burgers</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                        <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}">Devour it!</button>
                        <hr>
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <!-- Devoured Burgers -->
        <div class="col-sm-5">
            <div class="panel panel-default">
                <div class="panel-heading" id="righthead"><strong>Devoured Burgers</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>

                        <hr>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div><!-- /row -->

</div><!-- /container -->